
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user in the system.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the user."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "showEmail": {
          "type": "boolean",
          "description": "Whether the user's email is publicly visible."
        }
      },
      "required": ["id", "name", "email"]
    },
    "Player": {
      "title": "Player",
      "description": "Represents a player within a league.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "showEmail": { "type": "boolean" },
        "elo": { "type": "number" },
        "wins": { "type": "number" },
        "losses": { "type": "number" },
        "status": { "type": "string", "enum": ["active", "inactive"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "elo", "wins", "losses", "status"]
    },
    "Match": {
      "title": "Match",
      "description": "Represents a single match between two players.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "leagueId": { "type": "string" },
        "playerAId": { "type": "string" },
        "playerBId": { "type": "string" },
        "playerAName": { "type": "string" },
        "playerBName": { "type": "string" },
        "playerAScore": { "type": "number" },
        "playerBScore": { "type": "number" },
        "winnerId": { "type": "string" },
        "eloChangeA": { "type": "number" },
        "eloChangeB": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "leagueId", "playerAId", "playerBId", "playerAScore", "playerBScore", "winnerId", "createdAt"]
    },
    "League": {
      "title": "League",
      "description": "Represents a ping pong league.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "privacy": { "type": "string", "enum": ["public", "private"] },
        "leaderboardVisible": { "type": "boolean" },
        "inviteCode": { "type": "string" },
        "adminIds": { "type": "array", "items": { "type": "string" } },
        "players": { "type": "array", "items": { "$ref": "#/entities/Player" } },
        "matches": { "type": "array", "items": { "$ref": "#/entities/Match" } }
      },
      "required": ["id", "name", "privacy", "adminIds", "players"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores public user profile information."
    },
    "/leagues/{leagueId}": {
      "schema": { "$ref": "#/entities/League" },
      "description": "Stores all data for a specific league, including players and matches."
    }
  }
}
